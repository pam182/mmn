<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="style_toast_messages">

        <item name="android:background">@drawable/shape_toast_messages</item>
        <item name="android:alpha">0.9</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="style_textView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:ems">12</item>
        <item name="android:textColor">#FFFFCC</item>
        <item name="android:background">@drawable/shape_green_roundcorner</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_editText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/shape_black_roundcorner</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">#002000</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="style_espacio_vertical">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D6D6C2</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="style_button_actions">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D6D6C2</item>
        <item name="android:background">@drawable/button_background_actions</item>
    </style>
    <style name="style_item_list">
        <item name="android:background">@drawable/shape_green_roundcorner</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="style_item_list_first">
        <item name="android:textColor">#FFFFCC</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="style_item_list_second">
        <item name="android:textColor">#FFFFCC</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="style_icon_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D6D6C2</item>
        <item name="android:background">@drawable/button_icon_background</item>
    </style>

    <style name="aceptar">Aceptar</style>


</resources>
